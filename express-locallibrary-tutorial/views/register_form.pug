extends layout

block content
    h1=title

    form(method='POST' action='')
        div.form-group
            label(for='login') Login:
            input#first_name.form-control(type='text' placeholder='Login' name='login' required='true' value=(undefined===author ? '' : author.first_name) )
            label(for='email') Email:
            input#family_name.form-control(type='text' placeholder='Email' name='email' required='true' value=(undefined===author ? '' : author.family_name))
            label(for='password') Password:
            input#family_name.form-control(type='text' placeholder='Password' name='password' required='true' value=(undefined===author ? '' : author.family_name))
        button.btn.btn-primary(type='submit') Submit
    if errors
        ul
            for error in errors
                li!= error.msg
